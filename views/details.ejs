<%- include('header') %>
<%- include('menu') %>

<div class="col-md-6">
    <img src="http://placehold.it/600x400" class="img-responsive" style="padding-left:0px">
</div>

<div class="col-md-6">
    <h1><%= item.name %></h1>
    <h3><%= typeof category !== 'undefined' ? 'Category: ' + category.name : 'No category' %></h3>
    <h3><%= 'Price: ' + item.price %>.-</h3>
    <p class="text-justify">
        <%= typeof item.description !== 'undefined' ? item.description : 'No description available.' %>
    </p>
</div>

<%- include('footer') %>